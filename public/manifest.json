{
  "manifest_version": 3,
  "name": "SW API",
  "version": "0.0.2",
  "description": "Browser extension that fetch a person from swapi.dev",
  "host_permissions": [
    "https://swapi.dev/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Click to open panel"
  },
  "permissions": [
    "sidePanel",
    "tabs"
  ],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+B",
        "mac": "Command+B"
      }
    }
  },
  "icons": {
    "16": "images/logo-16x16.png",
    "48": "images/logo-48x48.png",
    "192": "images/logo-192x192.png"
  }
}